FROM golang:1.24-alpine AS builder

WORKDIR /src

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 go build -o /out/bridge ./cmd/bridge


FROM alpine:3.20

RUN adduser -D -H -u 10001 bridge
USER 10001

WORKDIR /app
COPY --from=builder /out/bridge /usr/local/bin/bridge

EXPOSE 8088

ENTRYPOINT ["bridge"]
CMD ["gateway", "serve", "--listen", ":8088"]
